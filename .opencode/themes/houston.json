{
  "$schema": "https://opencode.ai/theme.json",
  "defs": {
    "bg0": "#17191e",
    "bg1": "#23262d",
    "bg2": "#343841",
    "fg": "#eef0f9",
    "fgMuted": "#bfc1c9",
    "muted": "#858b98",
    "subtle": "#545864",
    "borderColor": "#343841",
    "primaryBlue": "#54b9ff",
    "primaryCyan": "#00daef",
    "mint": "#4bf3c8",
    "magenta": "#cc75f4",
    "purple": "#ad5dca",
    "yellow": "#ffd493",
    "yellowAlt": "#ffc368",
    "red": "#dc3657",
    "redAlt": "#f4587e",
    "white": "#ffffff",
    "black": "#000000"
  },
  "theme": {
    "primary": { "dark": "primaryCyan", "light": "primaryBlue" },
    "secondary": { "dark": "primaryBlue", "light": "primaryBlue" },
    "accent": { "dark": "mint", "light": "mint" },
    "error": { "dark": "redAlt", "light": "redAlt" },
    "warning": { "dark": "yellow", "light": "yellow" },
    "success": { "dark": "mint", "light": "mint" },
    "info": { "dark": "primaryBlue", "light": "primaryBlue" },

    "text": { "dark": "fg", "light": "bg0" },
    "textMuted": { "dark": "muted", "light": "subtle" },

    "background": { "dark": "bg0", "light": "white" },
    "backgroundPanel": { "dark": "bg1", "light": "fgMuted" },
    "backgroundElement": { "dark": "bg1", "light": "fgMuted" },

    "border": { "dark": "borderColor", "light": "subtle" },
    "borderActive": { "dark": "primaryCyan", "light": "primaryBlue" },
    "borderSubtle": { "dark": "bg2", "light": "fgMuted" },

    "diffAdded": { "dark": "mint", "light": "mint" },
    "diffRemoved": { "dark": "redAlt", "light": "redAlt" },
    "diffContext": { "dark": "muted", "light": "muted" },
    "diffHunkHeader": { "dark": "subtle", "light": "subtle" },
    "diffHighlightAdded": { "dark": "mint", "light": "mint" },
    "diffHighlightRemoved": { "dark": "redAlt", "light": "redAlt" },
    "diffAddedBg": { "dark": "#1c2b26", "light": "#E5E9F0" },
    "diffRemovedBg": { "dark": "#2b1c21", "light": "#E5E9F0" },
    "diffContextBg": { "dark": "bg1", "light": "fgMuted" },
    "diffLineNumber": { "dark": "subtle", "light": "muted" },
    "diffAddedLineNumberBg": { "dark": "#1c2b26", "light": "#E5E9F0" },
    "diffRemovedLineNumberBg": { "dark": "#2b1c21", "light": "#E5E9F0" },

    "markdownText": { "dark": "fg", "light": "bg0" },
    "markdownHeading": { "dark": "mint", "light": "primaryBlue" },
    "markdownLink": { "dark": "primaryBlue", "light": "primaryBlue" },
    "markdownLinkText": { "dark": "primaryCyan", "light": "primaryCyan" },
    "markdownCode": { "dark": "yellow", "light": "yellow" },
    "markdownBlockQuote": { "dark": "subtle", "light": "subtle" },
    "markdownEmph": { "dark": "primaryBlue", "light": "primaryBlue" },
    "markdownStrong": { "dark": "yellow", "light": "yellow" },
    "markdownHorizontalRule": { "dark": "subtle", "light": "subtle" },
    "markdownListItem": { "dark": "mint", "light": "primaryBlue" },
    "markdownListEnumeration": {
      "dark": "primaryCyan",
      "light": "primaryCyan"
    },
    "markdownImage": { "dark": "primaryBlue", "light": "primaryBlue" },
    "markdownImageText": { "dark": "primaryCyan", "light": "primaryCyan" },
    "markdownCodeBlock": { "dark": "fg", "light": "bg0" },

    "syntaxComment": { "dark": "#eef0f98f", "light": "#4c566a" },
    "syntaxKeyword": { "dark": "primaryBlue", "light": "primaryBlue" },
    "syntaxFunction": { "dark": "primaryCyan", "light": "primaryCyan" },
    "syntaxVariable": { "dark": "mint", "light": "mint" },
    "syntaxString": { "dark": "yellow", "light": "yellow" },
    "syntaxNumber": { "dark": "magenta", "light": "magenta" },
    "syntaxType": { "dark": "#acafff", "light": "#7487ff" },
    "syntaxOperator": { "dark": "primaryBlue", "light": "primaryBlue" },
    "syntaxPunctuation": { "dark": "fg", "light": "bg0" }
  }
}
