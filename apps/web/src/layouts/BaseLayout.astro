---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Web App", description = "Web application" } = Astro.props as Props;
import SiteNav from "../components/SiteNav.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta name="twitter:card" content="summary" />
    <link rel="icon" type="image/svg+xml" href="/app/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" href="/app/rss.xml" />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="bg-background text-foreground antialiased">
    <slot name="site-nav"><SiteNav /></slot>
    <main class="mx-auto max-w-[1440px] px-6 md:px-12 xl:px-20">
      <slot />
    </main>
    <footer class="mt-24 border-t">
      <div class="mx-auto max-w-[1440px] px-6 md:px-12 xl:px-20 py-20 bg-accent/10">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 text-sm">
          <div><p class="font-semibold uppercase tracking-[0.05em] text-muted-foreground">About</p></div>
          <div><p class="font-semibold uppercase tracking-[0.05em] text-muted-foreground">Resources</p></div>
          <div><p class="font-semibold uppercase tracking-[0.05em] text-muted-foreground">Community</p></div>
          <div><p class="font-semibold uppercase tracking-[0.05em] text-muted-foreground">More</p></div>
        </div>
      </div>
      <div class="border-t">
        <div class="mx-auto max-w-[1440px] px-6 md:px-12 xl:px-20 py-6 text-xs text-muted-foreground">
          <p>Â© {new Date().getFullYear()} Playground. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>


