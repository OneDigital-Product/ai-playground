---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Web App", description = "Web application" } = Astro.props as Props;
import SiteNav from "../components/SiteNav.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta name="twitter:card" content="summary" />
    <link rel="icon" type="image/svg+xml" href="/app/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" href="/app/rss.xml" />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="bg-background text-foreground antialiased">
    <slot name="site-nav"><SiteNav /></slot>
    <main class="mx-auto max-w-6xl px-4 sm:px-6">
      <slot />
    </main>
    <footer class="mx-auto max-w-6xl px-4 sm:px-6 py-10 text-xs text-muted-foreground border-t mt-12">
      <p>Â© {new Date().getFullYear()} Playground. All rights reserved.</p>
    </footer>
  </body>
</html>

<style>
  @import "../styles/global.css";
</style>
