---

export interface Props {
  title: string;
  description?: string;
  href: string;
  date: Date | string;
  tags?: string[];
}

const { title, description, href, date, tags = [] } = Astro.props as Props;
---

<article class="group rounded-xl border bg-card text-card-foreground shadow-sm transition-colors hover:border-primary/40">
  <a href={href} class="block rounded-xl focus:outline-none focus:ring-4 focus:ring-ring/50">
    <div class="border-b px-6 py-6">
      <span class="mb-1 inline-flex items-center gap-1 font-mono text-[10px] uppercase tracking-[0.2em] text-muted-foreground">/<span>{new Date(date).toLocaleDateString()}</span></span>
      <h3 class="text-balance text-2xl sm:text-3xl font-semibold tracking-tight">
        <span class="transition-colors group-hover:text-primary">{title}</span>
      </h3>
      {description && (
        <p class="mt-1 text-pretty text-muted-foreground">{description}</p>
      )}
    </div>
    <div class="px-6 py-4">
      {tags.length > 0 && (
        <ul class="mt-1 flex flex-wrap gap-2">
          {tags.map((t) => (
            <li class="inline-flex items-center rounded-full border bg-secondary px-2.5 py-0.5 text-xs text-secondary-foreground">{t}</li>
          ))}
        </ul>
      )}
    </div>
  </a>
  </article>
