---

export interface Props {
  title: string;
  description?: string;
  href: string;
  date: Date | string;
  tags?: string[];
}

const { title, description, href, date, tags = [] } = Astro.props as Props;
---

<article class="group h-full min-h-[320px] sm:min-h-[340px] md:min-h-[360px] rounded-[4px] border border-border bg-card text-card-foreground shadow-sm transition-colors hover:border-primary">
  <a href={href} class="flex h-full flex-col rounded-[4px] focus:outline-none focus:ring-4 focus:ring-ring/50">
    <div class="flex-1 border-b border-border px-8 py-8">
      <span class="mb-2 inline-flex items-center gap-1 text-[14px] uppercase tracking-[0.05em] text-muted-foreground">{new Date(date).toLocaleDateString()}</span>
      <h3 class="text-balance text-[20px] sm:text-[24px] font-bold tracking-tight">
        <span class="transition-colors group-hover:text-primary">{title}</span>
      </h3>
      {description && (
        <p class="mt-2 text-pretty text-[16px] text-muted-foreground line-clamp-3">{description}</p>
      )}
    </div>
    <div class="mt-auto px-8 py-6">
      {tags.length > 0 && (
        <ul class="mt-2 flex flex-wrap gap-2">
          {tags.map((t) => (
            <li class="inline-flex items-center rounded-[4px] border px-2.5 py-0.5 text-[12px] text-muted-foreground">{t}</li>
          ))}
        </ul>
      )}
    </div>
  </a>
  </article>
