{
  "$schema": "https://opencode.ai/config.json",
  "theme": "houston",
  "mcp": {
    "Context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true,
      "environment": {}
    },
    "Playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": true,
      "environment": {}
    },
    "Shadcn-UI": {
      "type": "local",
      "command": ["npx", "-y", "shadcn-ui-mcp-server"],
      "enabled": true,
      "environment": {}
    },
    "Convex": {
      "type": "local",
      "command": ["npx", "-y", "convex@latest", "mcp", "start"],
      "enabled": true,
      "environment": {}
    }
  }
}
